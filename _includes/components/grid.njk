<div class="card-deck">
    {%- for item in items | reverse -%}
        {% set regExp = r/fragment/g %}
        {% if regExp.test(item.inputPath) == false and item.data.draft != true %}
            <a class="card" href="{{item.url}}">
                {% if item.data.image %}
                    <amp-img class="card-img-top {{ item.data.imagePosition if item.data.imagePosition }}" src="{{item.data.image}}" alt="{{ item.data.title }}" layout="responsive" height="200" width="200"></amp-img>
                {% else %}
                    <div class="bigtext" >{{ item.data.title }}</div>
                {% endif %}
                <div class="card-body">
                    <h3 class="card-title">{{ item.data.title }}</h3>
                    <p class="card-text">
                        {%- set stringItems = item.data.tags -%}
                        {%- include 'components/stringItems.njk' -%}
                    </p>
                </div>
            </a>
        {% endif %}
    {%- endfor -%}
</div>